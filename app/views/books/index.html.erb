<h1>Listing books</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Description</th>
    <th>Isbn</th>
    <th>Current owner</th>
    <th>Get this book now!</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.author %></td>
    <td><%= book.title %></td>
    <td><%= book.description %></td>
    <td><%= book.isbn %></td>
    <td><%= link_to book.user.user_name, book.user  %></td>
    <td><%= link_to(image_tag('heart_24.png', title: 'I want this Book!', alt: 'I want this book!'), controller: :books, action: 'take', id: book, data: {confirm: 'Do you want to notifiy '+book.user.user_name+' that you would love to have this book?' }) unless session[:user] == book.user %></td>
    <td><%= link_to 'Show Details', book %></td>
    <td><%= link_to('Edit', edit_book_path(book)) unless session[:user] != book.user %></td>
    <td><%= link_to('Delete my Book', book, method: :delete, data: { confirm: 'Are you sure?' }) unless session[:user] != book.user %></td>
  </tr>
<% end %>
</table>

<br />
<p>
<%= link_to 'Offer YOUR Book NOW! :-)', new_book_path %>
</p>
